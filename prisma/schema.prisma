generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  matricula String    @id @default(uuid())
  email      String   @unique
  nome       String
  grupo      Grupo?   @relation("lider")
  membros    Grupo    @relation("membros", fields: [nomeGrupo], references: [nome])
  nomeGrupo  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Professor{
  matricula  String   @id @default(uuid())
  email      String   @unique
  nome       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Grupo {
  nome            String  @id @default(uuid())
  lider           Aluno   @relation("lider", fields: [matriculaLider], references: [matricula])
  matriculaLider  String  @unique
  membros         Aluno[] @relation("membros")
  diaApresentacao DateTime
  estande         Int
 }